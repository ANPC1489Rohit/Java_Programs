	    phone_no=sc.nextInt();
	    
	    System.out.println("Enter your address:");
	    address=sc.nextLine();
	    
	   
	    try {
	    	System.out.println("Enter user id:");
		    id=sc.nextInt();
			int[] a=new int[8];
			if(a.length<=8)
			{
				System.out.println("age is less"+a[a.length]);
			}
			else {
				throw new ArrayIndexOutOfBoundsException("The length is more than Eight");
			}
