

question 2: Write a program to accept a string from the user and accepet the character
            from the user and remove the occurrences of a give character from the input
            string.

import java.util.ArrayList;
import java.util.Scanner;

public class Lab {

	public static void main(String[] args)
	{
	    String input;
		char character ;
		Scanner sc=new Scanner(System.in);
		
		System.out.println("Enter the string as an input:");
	     input=sc.next();
		
		System.out.println("Enter the letter to be remove from the string");
		   character =sc.next().charAt(0);
		 System.out.println("Our result string is: "+removeOccurences(input,character));
	}
		 public static String removeOccurences(String input, Character character) 
		 {
		       ArrayList<Character> al=new ArrayList<>();
		       for(int i=0;i<input.length();i++)
		       {
		           char ch = input.charAt(i);
		           if(ch != character)
		           {
		               al.add(ch);
		           }
		       }
		       StringBuilder stringBuilder=new StringBuilder();
		       for(char c:al)
		       {
		           stringBuilder.append(c);
		       }
		      return stringBuilder.toString();
		   }
		
		
	
	

}
